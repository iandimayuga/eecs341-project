- trusted ||= false
.item-small
  %a.no-decor{:href => "/item/#{item.id}"}
    %img.thumbnail{:src => item.image.thumb.url, :width => 210, :height => 150}
    .holder= item.name
    %div.tags
      - if trusted
        %span.success.label Trusted
      - if @user != nil && item.user == @user 
        %span.label Yours
      - if item.available?
        %span.label Available
      - else
        %br
